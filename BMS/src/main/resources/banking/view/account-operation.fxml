<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="banking.controller.AccountOperationController" stylesheets="@styles.css" styleClass="app-background">
   <children>
      <VBox alignment="CENTER" spacing="20.0" maxWidth="420.0" styleClass="card content-card">
         <padding>
            <Insets bottom="28.0" left="32.0" right="32.0" top="32.0" />
         </padding>
         <children>
            <Label fx:id="titleLabel" text="Operation" styleClass="section-title" />
            <Label fx:id="accountInfoLabel" text="Account Information" textAlignment="CENTER" wrapText="true" styleClass="subtitle-text" />
            <VBox spacing="8.0" styleClass="form-grid">
               <children>
                  <Label text="Amount (BWP)" />
                  <TextField fx:id="amountField" promptText="Enter amount" />
               </children>
            </VBox>
            <HBox spacing="12.0" alignment="CENTER">
               <children>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" text="Submit" styleClass="primary-button" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" styleClass="ghost-button" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>


